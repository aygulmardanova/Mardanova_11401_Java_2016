<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:postgresql://localhost:5432/FitnessClub</property>
    <property name="connection.driver_class">org.postgresql.Driver</property>
    <mapping class="ru.kpfu.itis.aygul.model.ClassEntity"/>
      <mapping class="ru.kpfu.itis.aygul.model.Instructor"/>
      <mapping class="ru.kpfu.itis.aygul.model.Level"/>
      <mapping class="ru.kpfu.itis.aygul.model.ProbablyInstructor"/>
      <mapping class="ru.kpfu.itis.aygul.model.Purchase"/>
      <mapping class="ru.kpfu.itis.aygul.model.Schedule"/>
      <mapping class="ru.kpfu.itis.aygul.model.Subscription"/>
      <mapping class="ru.kpfu.itis.aygul.model.User"/>
    <mapping class="ru.kpfu.itis.aygul.model.Photos"/>
    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>